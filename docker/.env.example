# ML Training Server - Docker Compose Environment Variables
# Copy this file to .env and update with your own values

# Grafana
GRAFANA_ADMIN_PASSWORD=changeme_secure_password

# Per-user passwords (for SSH, VNC, RDP, web desktop, etc.)
USER_ALICE_PASSWORD=changeme_alice_password
USER_BOB_PASSWORD=changeme_bob_password
USER_CHARLIE_PASSWORD=changeme_charlie_password
USER_DAVE_PASSWORD=changeme_dave_password
USER_EVE_PASSWORD=changeme_eve_password

# Domain for Cloudflare Tunnel
DOMAIN=yourdomain.com

# Mount point for storage
MOUNT_POINT=/mnt/storage
